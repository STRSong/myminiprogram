/* pages/detail/detail.wxss */
.detailContainer{
  display: flex;
  flex-direction: column;
}

.headerImage{
  width: 100%;
  height: 460rpx;
}

.header{
  width: 100%;
  padding-top: 20rpx;
}

.header image{
  padding-left: 10rpx;
  height: 64rpx;
  width: 64rpx;
  vertical-align: middle;
}

.header text{
  font-size: 28rpx;
  padding-left: 10rpx;
}

.title{
  width: 100%;
  padding-top: 10rpx;
}

.title text{
  font-size: 38rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.collection-share{
  float: right;
  margin-right: 50rpx;
}

.collection-share image{
  width: 90rpx;
  height: 90rpx;
  margin-right: 20rpx;
}


.line{
  width: 90%;
  height: 1px;
  background-color: #aaa;
  margin-left: 5%;
  margin-top: 45rpx;
  
}

.btn{
  padding-top: 20rpx;
  padding-right: 40rpx;
}

.btn button{
  float: right;
}

.context{
  margin-top: 20rpx;
  width: 100%;
  font-size: 32rpx;
  text-indent: 32rpx;
}

.musicImage{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 200rpx;
  left: 50%;
  margin-left: -30rpx;
}